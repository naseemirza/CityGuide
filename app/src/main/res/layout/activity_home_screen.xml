    <RelativeLayout
        android:id="@+id/relatvlayout1"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="550dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">


        <ImageView
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:src="@drawable/sahaj"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="89dp" />

        <TextView
            android:text="Find yoga centers in your city"
            android:textColor="@color/bgContent"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:background="@color/colorAccent"
            android:text="Search"
            android:textSize="25dp"
            android:gravity="center"
        android:textStyle="bold"
            android:layout_marginTop="80dp"
            android:textColor="@color/bgContent"
        android:layout_width="150dp"
            android:textAlignment="center"
        android:layout_height="50dp"
            android:id="@+id/btn_search"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <RelativeLayout

            android:background="@color/color_card_background"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:text="Shop Now"
               android:textSize="15dp"

                android:layout_below="@+id/imageButton_shpng"
                android:textColor="@color/facebook_color"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="0dp"
                android:id="@+id/textshop" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/shoping"
                android:id="@+id/imageButton_shpng"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Donate"
                android:gravity="center"
                android:textColor="@color/facebook_color"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="39dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/textdonate" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/donate"
                android:id="@+id/imageButton_donate"

                android:layout_above="@+id/textshop"
                android:layout_alignLeft="@+id/textdonate"
                android:layout_alignStart="@+id/textdonate"
                android:layout_alignTop="@+id/imageButton_shpng" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/honenew"
                android:id="@+id/imageButton_home"
                android:layout_marginRight="56dp"
                android:layout_marginEnd="56dp"
                android:layout_above="@+id/textshop"
                android:layout_toLeftOf="@+id/imageButton_shpng"
                android:layout_toStartOf="@+id/imageButton_shpng"
                android:layout_alignTop="@+id/imageButton_shpng" />

            <TextView
                android:text="Home"
                android:textColor="@color/facebook_color"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="77dp"
                android:layout_marginStart="65dp"
                android:id="@+id/texthome" />


        </RelativeLayout>


